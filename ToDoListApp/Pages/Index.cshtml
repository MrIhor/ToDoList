@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center mb-5">
    <h1 class="display-4">All tasks</h1>
</div>
<a class="btn btn-primary" asp-page="./Create">Create new task</a>

@foreach (var item in Model.Exercise)
{
    <div class="container">
        <div class="d-flex justify-content-between">
            <div class="w-25">
                <input class="form-check-input mt-0"
                       type="checkbox"
                       checked="@item.Done" />
            </div>
            <div class="w-25">
                @item.Title
            </div>
            <div class="w-25">
                @item.Descriptions
            </div>
            <div class="w-25">
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </div>
            <div class="w-25 d-flex justify-content-end">
                <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-danger ml" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                <a class="btn btn-info ml" asp-page="./Details" asp-route-id="@item.Id">Details</a>
            </div>
        </div>
    </div>
    <hr/>
}

