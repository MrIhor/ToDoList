@page
@model ToDoListApp.Pages.DeleteModel
@{ ViewData["Title"] = "Delete";
}

<div class="text-start mb-5">
    <h3 class="display-4">Do you really want to delete this task?</h3>
</div>

<form method="post">
    <input type="hidden" asp-for="Exercise.Id" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-page="./Index">Back to List</a>
</form>

<div class="container">
    <div class="d-flex justify-content-between">
        <div class="w-25">
            <input class="form-check-input mt-0"
                   type="checkbox"
                   checked="@Model.Exercise.Done" />
        </div>
        <div class="w-25">
            @Model.Exercise.Title
        </div>
        <div class="w-25">
            @Html.DisplayFor(modelItem => Model.Exercise.CreatedAt)
        </div>
    </div>
</div>
